@model IList<DataAccess.Model.Gallery>

    <section class="content-header">
        <h1>
            Galerie
            <small>Přehled</small>
        </h1>
    </section>

    <section class="content">

        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-12 table-responsive">
                                <table class="table table-bordered table-striped text-center">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Akce</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var gallery in Model)
                                        {
                                            <tr>
                                                <td>@gallery.Id</td>
                                                <td>
                                                    <a href="@Url.Action("Edit", "Galleries", new {idGallery = gallery.Id})" class="btn btn-default btn-sm">Obrázky</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-7 col-sm-push-5">
                                @Html.Action("Paging", "Home", new { @action = "Index", @controller = "Galleries", paging = ViewBag.Paging })
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section>
