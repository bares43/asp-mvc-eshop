@model IList<DataAccess.Model.FileStorage>

<section class="content-header">
    <h1>
        Soubory
        <small>Přehled</small>
    </h1>
</section>

<section class="content">

    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12 table-responsive">
                            <table class="table table-bordered table-striped text-center">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Akce</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var storage in Model)
                                    {
                                        <tr>
                                            <td>@storage.Id</td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Files", new {idFileStorage = storage.Id})" class="btn btn-default btn-sm">Soubory</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-7 col-sm-push-5">
                            @Html.Action("Paging", "Home", new { @action = "Index", @controller = "Files", paging = ViewBag.Paging })
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
