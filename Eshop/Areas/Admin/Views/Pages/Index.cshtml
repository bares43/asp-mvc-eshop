@model IList<DataAccess.Model.Page>

<section class="content-header">
    <h1>
        Stránky
        <small>Přehled</small>
    </h1>
</section>

<section class="content">

    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <a href="@Url.Action("Add", "Pages")" class="btn btn-primary">Přidat stránku</a>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12 table-responsive">
                            <table class="table table-bordered table-striped text-center">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Název</th>
                                        <th>Akce</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var page in Model)
                                    {
                                        <tr>
                                            <td>@page.Id</td>
                                            <td>@page.Name</td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Pages", new {idPage = page.Id})" class="btn btn-default btn-sm">Upravit</a>
                                                @if (page.GalleryId != null)
                                                {
                                                    <a href="@Url.Action("Edit", "Galleries", new {idGallery = page.GalleryId})" class="btn btn-default btn-sm">Galerie</a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Add", "Galleries", new { AddToEntityType = nameof(Page), AddToEntityId = page.Id})" class="btn btn-sm btn-default">Galerie</a>
                                                }
                                                @if (page.FileStorageId != null)
                                                {
                                                    <a href="@Url.Action("Edit", "Files", new {idFileStorage = page.FileStorageId})" class="btn btn-default btn-sm">Soubory</a>
                                                }
                                                else
                                                {
                                                    <a href="@Url.Action("Add", "Files", new { AddToEntityType = nameof(Page), AddToEntityId = page.Id})" class="btn btn-sm btn-default">Soubory</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                            </table>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>