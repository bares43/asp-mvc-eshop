@model IList<DataAccess.Model.Category>
@{
}


<section class="content-header">
    <h1>
        Kategorie
        <small>Přehled</small>
    </h1>
</section>

<section class="content">

    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <a href="@Url.Action("Add", "Categories")" class="btn btn-primary">Přidat</a>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12 table-responsive">
                            <table class="table table-bordered table-striped text-center">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Název</th>
                                        <th>Akce</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.Id</td>
                                            <td>@category.Name</td>
                                            <td>
                                                <a href="@Url.Action("Edit", "Categories", new {idCategory = category.Id})" class="btn btn-default btn-sm">Upravit</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-7 col-sm-push-5">
                            @Html.Action("Paging", "Home", new { @action = "Index", @controller = "Categories", paginator = ViewBag.Paging })
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
