<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>E-shop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Less styles
    <link rel="stylesheet/less" type="text/css" href="less/bootsshop.less">
    <script src="less.js" type="text/javascript"></script>
     -->
    <!-- Le styles  -->
    <link href="@Url.Content("~/Assets/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/css/bootstrap-responsive.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/css/font-awesome.min.css")" rel="stylesheet" />

    <link href="@Url.Content("~/Assets/css/Site.css")" rel="stylesheet"/>
    <script src="@Url.Content("~/Assets/js/jquery-1.10.2.min.js")"></script>


    <script src="@Url.Content("~/Assets/plugins/noty/jquery.noty.packaged.min.js")"></script>


    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  
</head>
<body>
    
<header id="header">
    <div class="container">
        @Html.Action("HeaderCart", "Cart")
        <div class="navbar">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button class="navbar-toggle hidden-sm hidden-md hidden-lg" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="text">Zobrazit menu</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand logo" href="@Url.Action("Index", "Home")">E-shop</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <nav class="navbar-collapse bs-navbar-collapse collapse" role="navigation">
                @using (Html.BeginForm("List", "Product", FormMethod.Get))
                {
                    <div class="form-group col-md-3">
                        <input id="srchFld" type="text" class="form-control" placeholder="Hledat" name="phrase">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success"><i class="fa fa-search"></i> Najít</button>
                    </div>
                }
                <ul class="nav navbar-nav navbar-right">
                    <li class="shidden-xs"><a href="@Url.Action("Contact", "Pages")">Kontakt</a></li>
                    <li class="shidden-xs"><a href="@Url.Action("Terms", "Pages")">Obchodní podmínky</a></li>
                    @Html.Action("Header", "Home")
                </ul>
            </nav>
        </div>
    </div>
</header>
<div id="main-body">
    <div class="container">
        <div class="row">
            <div id="sidebar" class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                @Html.Action("CategoriesMenu", "Menu")
            </div>
            <div id="main-col" class="col-lg-9 col-md-8 col-sm-8 col-xs-12">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
<div id="bottom-line">
    <div class="container">
        <p class="pull-right">&copy; @DateTime.Now.ToString("Y") E-shop</p>
        <p>Template from: <a href="http://themes.bootstrappage.com/botshop/">http://themes.bootstrappage.com/botshop/</a>
        </p>
    </div>
</div>

<!--<script src="@Url.Content("~/Assets/js/bootstrap.min.js")"></script>-->
<script crossorigin="anonymous" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
<script src="@Url.Content("~/Assets/js/jquery.lightbox-0.5.js")"></script>
<script src="@Url.Content("~/Areas/Admin/Assets/js/eshop.js")"></script>
<script type="text/javascript">
    $(function() {
        $('#gallery a').lightBox();
    });
</script>
</body>
</html>